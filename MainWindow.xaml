<Window x:Class="Cloud9Supermarket.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f0f0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Inicio de sesión" FontSize="20" FontWeight="Bold" 
                       Margin="0,0,0,20" TextAlignment="Center"/>
            <TextBlock Text="Usuario (Correo)" Margin="0,5,0,2"/>
            <TextBox Name="txtUsuario"/>
            <TextBlock Text="Contraseña (Teléfono)" Margin="0,10,0,2"/>
            <PasswordBox Name="pwdContrasena"/>
            <Button Content="Iniciar sesión" Click="IniciarSesion_Click"
                    Margin="0,20,0,0" Background="#2196F3" Foreground="White"/>
            <Button Content="Registrarse" Click="Registrarse_Click"
                    Margin="0,10,0,0" Background="#4CAF50" Foreground="White"/>
            <TextBlock Name="txtError" Text="Credenciales inválidas"
                       Foreground="Red" Visibility="Collapsed" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>



